			#{nxRestrauntType},
			#{nxRestrauntSubAmount},
			#{nxRestrauntComId},
			#{nxRestrauntFilePath},
			#{nxRestrauntIsGroupDep},
			#{nxRestrauntPrintName},
			#{nxRestrauntShowWeeks},
			#{nxRestrauntSettleType},
			#{nxRestrauntAttrName},
		 	#{nxRestrauntLat},
		 	#{nxRestrauntLng},
		 	#{nxRestrauntAddress},
		 	#{nxRestrauntNavigationAddress},
			#{nxRestrauntNumber},
		 	#{nxRestrauntServiceLevel},
		 	#{nxRestrauntDriverId},
		 	#{nxRestrauntOweBoxNumber},
