		(
			`nx_restraunt_id`,
			`nx_restraunt_name`,
			`nx_restraunt_father_id`,
			`nx_restraunt_type`,
			`nx_restraunt_sub_amount`,
			`nx_restraunt_com_id`,
			`nx_restraunt_file_path`,
			`nx_restraunt_is_group_dep`,
			`nx_restraunt_print_name`,
			`nx_restraunt_show_weeks`,
			`nx_restraunt_settle_type`,
			`nx_restraunt_attr_name`,
		 	`nx_restraunt_lat`,
		 	`nx_restraunt_lng`,
