<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nongxinle.dao.NxECommerceSupplierDao">

	<select id="queryObject" resultType="com.nongxinle.entity.NxECommerceSupplierEntity">
		select * from nx_e_commerce_supplier where nx_commerce_supplier_id = #{value}
	</select>

	<resultMap id="supplier" type="NxSupplierEntity">
		<id property="nxSupplierId" column="nx_supplier_id"/>
		<result property="nxSupplierName" column="nx_supplier_name"/>
	</resultMap>
	<select id="queryList" resultMap="supplier">
		select * from nx_e_commerce_supplier as cs
		left join nx_supplier as sup on cs.nx_CS_supplier_id = sup.nx_supplier_id
		where nx_CS_commerce_id = #{commerceId}
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from nx_e_commerce_supplier 
	</select>


    <select id="queryCommerceSupplierByComId" resultMap="supplier">
		select * from  nx_e_commerce_supplier as es
		left join nx_supplier as s on s.nx_supplier_id = es.nx_CS_supplier_id
		where nx_CS_commerce_id = #{commerceId}
	</select>

    <insert id="save" parameterType="com.nongxinle.entity.NxECommerceSupplierEntity" useGeneratedKeys="true"
	 keyProperty="nxCommerceSupplierId">
		insert into nx_e_commerce_supplier
		(
			`nx_commerce_supplier_id`,
			`nx_CS_commerce_id`,
			`nx_CS_supplier_id`
		)
		values
		(
			#{nxCommerceSupplierId},
			#{nxCsCommerceId},
			#{nxCsSupplierId}
		)
	</insert>
	 
	<update id="update" parameterType="com.nongxinle.entity.NxECommerceSupplierEntity">
		update nx_e_commerce_supplier 
		<set>
			<if test="nxCsCommerceId != null">`nx_CS_commerce_id` = #{nxCsCommerceId}, </if>
			<if test="nxCsSupplierId != null">`nx_CS_supplier_id` = #{nxCsSupplierId}</if>
		</set>
		where nx_commerce_supplier_id = #{nxCommerceSupplierId}
	</update>
	
	<delete id="delete">
		delete from nx_e_commerce_supplier where nx_commerce_supplier_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from nx_e_commerce_supplier where nx_commerce_supplier_id in
		<foreach item="nxCommerceSupplierId" collection="array" open="(" separator="," close=")">
			#{nxCommerceSupplierId}
		</foreach>
	</delete>

</mapper>